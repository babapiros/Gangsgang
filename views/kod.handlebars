<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LevyScript | {{kod.isim}}</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background: url(https://cdn.pixabay.com/photo/2016/07/16/03/30/space-1529940_1280.jpg) no-repeat center center fixed;
      background-size: cover;
      color: #f5f5f5;
    }

    main {
      max-width: 800px;
      margin: 2rem auto;
      padding: 1.5rem;
      background: #1c1c1c;
      border-radius: 10px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
    }

    h3, h5, p {
      margin: 1rem 0;
    }

    .kodyazirengi {
      background: #2b2b2b;
      border-radius: 8px;
      padding: 1rem;
      margin: 1rem 0;
      position: relative;
    }

    .kodyazirengi code {
      display: block;
      color: #dcdcdc;
      font-family: 'Courier New', Courier, monospace;
      white-space: pre-wrap;
      overflow-x: auto;
    }

    .kodyazirengi pre {
      margin: 0;
    }

    /* Kopyala butonu stili */
    .copy-button {
      position: absolute;
      top: 10px;
      right: 10px;
      background: #343434;
      color: white;
      border: none;
      padding: 8px;
      border-radius: 50%;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .copy-button:hover {
      background: #5a5a5a;
    }

    .copy-button i {
      font-size: 16px;
    }

    /* Başlık düzeni */
    .section-title {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 0.5rem;
    }

    .section-title h5 {
      margin: 0;
      font-size: 1.2rem;
    }

    .section-title .copy-icon {
      background: #444;
      color: white;
      border: none;
      padding: 0.5rem;
      border-radius: 5px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .section-title .copy-icon:hover {
      background: #666;
    }

    /* Responsive */
    @media (max-width: 768px) {
      main {
        margin: 1rem;
        padding: 1rem;
      }
    }
  </style>
</head>
<body>
  <main>
    <div>
      <h3 class="text-center">Kod İsmi: {{kod.isim}}</h3>
      <h5 class="text-center">Kod ID: {{member.user.id}}</h5>
      <h5 class="text-center">Kod Açıklaması: {{kod.desc}}</h5>
      <hr>

      <!-- Kod 1 -->
      <div>
        <div class="section-title">
          <h5>Code(1)</h5>
          <button class="copy-icon" onclick="copyCode('code_main')"><i class="fas fa-copy"></i></button>
        </div>
        <pre class="kodyazirengi">
          <code id="code_main">{{kod.main_code}}</code>
        </pre>
      </div>

      <!-- Kod 2 -->
      <div>
        <div class="section-title">
          <h5>Code(2)</h5>
          <button class="copy-icon" onclick="copyCode('code_komutlar')"><i class="fas fa-copy"></i></button>
        </div>
        <pre class="kodyazirengi">
          <code id="code_komutlar">{{kod.komutlar_code}}</code>
        </pre>
      </div>

      <center>
        <a href="/sil/{{kod.kod_rank}}/{{kod.id}}" class="btn btn-danger" style="padding: 10px 20px; border-radius: 5px;">Delete Code</a>
      </center>
    </div>
  </main>

  <script>
    function copyCode(id) {
      const codeContent = document.getElementById(id).textContent;
      navigator.clipboard.writeText(codeContent).then(() => {
        alert("Code copied to clipboard!");
      }).catch(err => {
        console.error("Failed to copy code: ", err);
      });
    }
  </script>
</body>
</html>
