<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LevyScript | {{kod.isim}}</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    /* Genel Temalar */
    body {
      margin: 0;
      padding: 0;
      font-family: 'Roboto', sans-serif;
      background-color: #121212;
      color: #f5f5f5;
      line-height: 1.6;
    }

    main {
      max-width: 900px;
      margin: 2rem auto;
      padding: 1.5rem;
      background: #1e1e1e;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.6);
    }

    h3, h5 {
      margin: 1rem 0;
      text-align: center;
    }

    hr {
      border: 0.5px solid #333;
    }

    /* Kod Blokları */
    .code-block {
      background: #282c34;
      padding: 1rem;
      border-radius: 8px;
      margin: 1.5rem 0;
      position: relative;
      overflow: hidden;
    }

    .code-block code {
      display: block;
      color: #dcdcdc;
      font-family: 'Courier New', Courier, monospace;
      white-space: pre-wrap;
      line-height: 1.5;
    }

    .code-block pre {
      margin: 0;
    }

    /* Kopyala Butonları */
    .copy-button {
      position: absolute;
      top: 10px;
      right: 10px;
      background: #444;
      color: #fff;
      border: none;
      padding: 8px 12px;
      border-radius: 5px;
      cursor: pointer;
      font-size: 14px;
      display: flex;
      align-items: center;
      transition: background-color 0.3s ease;
    }

    .copy-button:hover {
      background: #555;
    }

    .copy-button i {
      margin-right: 5px;
    }

    /* Buton */
    .btn-delete {
      display: inline-block;
      background: #e53935;
      color: white;
      text-decoration: none;
      padding: 10px 20px;
      border-radius: 5px;
      transition: all 0.3s ease;
    }

    .btn-delete:hover {
      background: #c62828;
    }

    /* Responsive */
    @media (max-width: 768px) {
      main {
        margin: 1rem;
        padding: 1rem;
      }
    }
  </style>
</head>
<body>
  <main>
    <!-- Kod Bilgileri -->
    <h3>Kod İsmi: {{kod.isim}}</h3>
    <h5>Kod ID: {{member.user.id}}</h5>
    <h5>Kod Açıklaması: {{kod.desc}}</h5>
    <hr>

    <!-- Kod Blokları -->
    <!-- Kod 1 -->
    <div class="code-block">
      <button class="copy-button" onclick="copyCode('code_main')">
        <i class="fas fa-copy"></i> Kopyala
      </button>
      <pre><code id="code_main">{{kod.main_code}}</code></pre>
    </div>

    <!-- Kod 2 -->
    <div class="code-block">
      <button class="copy-button" onclick="copyCode('code_komutlar')">
        <i class="fas fa-copy"></i> Kopyala
      </button>
      <pre><code id="code_komutlar">{{kod.komutlar_code}}</code></pre>
    </div>

    <!-- Silme Butonu -->
    <center>
      <a href="/sil/{{kod.kod_rank}}/{{kod.id}}" class="btn-delete">Delete Code</a>
    </center>
  </main>

  <script>
    /* Kopyala Fonksiyonu */
    function copyCode(id) {
      const codeContent = document.getElementById(id).textContent;
      navigator.clipboard.writeText(codeContent).then(() => {
        alert("Kod başarıyla kopyalandı!");
      }).catch(err => {
        console.error("Kod kopyalama başarısız: ", err);
      });
    }
  </script>
</body>
</html>
