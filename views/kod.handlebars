<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LevyScript | {{kod.isim}}</title>

  <!-- Ana Tema Stilleri -->
  <style>
    body {
      background: #121212;
      color: #ffffff;
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
    }

    main {
      padding: 20px;
      max-width: 900px;
      margin: 0 auto;
      background: #1e1e1e;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    }

    .avatar {
      border-radius: 50%;
      border: 3px solid #ffffff;
      width: 120px;
      height: 120px;
      margin-bottom: 10px;
    }

    h3, h5, h4 {
      margin: 10px 0;
      text-align: center;
      color: #f0f0f0;
    }

    a.btn-outline-danger {
      display: inline-block;
      background: transparent;
      border: 2px solid #ff5757;
      color: #ff5757;
      padding: 10px 20px;
      font-size: 16px;
      text-align: center;
      text-transform: uppercase;
      border-radius: 25px;
      transition: all 0.3s ease;
    }

    a.btn-outline-danger:hover {
      background: #ff5757;
      color: #ffffff;
    }

    pre[class*="language-"] {
      padding: 15px;
      border-radius: 10px;
      background: #1c1c1c;
      font-size: 14px;
      color: #d4d4d4;
      overflow-x: auto;
      box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.5);
      margin-bottom: 20px;
    }

    .copy-button {
      display: inline-block;
      background: #ffffff;
      color: #1e1e1e;
      font-size: 14px;
      font-weight: bold;
      padding: 10px 15px;
      border: none;
      border-radius: 25px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .copy-button:hover {
      background: #1e1e1e;
      color: #ffffff;
      border: 2px solid #ffffff;
    }

    .container {
      text-align: center;
    }

    .divider {
      width: 80%;
      height: 1px;
      background: #3a3a3a;
      margin: 20px auto;
    }
  </style>

  <!-- Prism.js için kod renklendirme -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-lua.min.js"></script>
</head>
<body>
  <main>
    <div class="container">
      <!-- Kullanıcı Bilgisi -->
      <img src="{{kod.icon}}" alt="Avatar" class="avatar">
      <h3>{{kod.k_adi}}</h3>
    </div>

    <!-- Kod Bilgisi -->
    <div class="divider"></div>
    <h3>Kod İsmi: {{kod.isim}}</h3>
    <h5>Kodu: {{kod.auth}}</h5>
    <h5>Code Description: {{kod.desc}}</h5>
    <h5>Modules: <kbd>{{kod.modules}}</kbd></h5>
    <div class="divider"></div>

    <!-- Kod 1 -->
    <h4>Code (1)</h4>
    <pre class="language-lua">
      <code>{{kod.main_code}}</code>
    </pre>
    <button type="button" class="copy-button" id="copy_main">Copy Code</button>

    <!-- Kod 2 -->
    <h4>Code (2)</h4>
    <pre class="language-lua">
      <code>{{kod.komutlar_code}}</code>
    </pre>
    <button type="button" class="copy-button" id="copy_komutlar">Copy Code</button>

    <!-- Kod Silme Butonu -->
    <div class="divider"></div>
    <a href="/sil/{{kod.kod_rank}}/{{kod.id}}" class="btn-outline-danger">Delete Code</a>
  </main>

  <!-- Kopyalama İşlevi -->
  <script>
    document.getElementById('copy_main').addEventListener('click', function () {
      navigator.clipboard.writeText("{{kod.main_code}}");
      alert('Code (1) has been copied to clipboard!');
    });

    document.getElementById('copy_komutlar').addEventListener('click', function () {
      navigator.clipboard.writeText("{{kod.komutlar_code}}");
      alert('Code (2) has been copied to clipboard!');
    });
  </script>
</body>
</html>
